<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Mosse"
            android:layout_width="94dp"
            android:layout_height="24dp"
            android:id="@+id/textView5" android:textSize="20sp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="@+id/textView6" app:layout_constraintEnd_toEndOf="@+id/textView6"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Divisioni"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/textView2" android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seekBar"
            android:textAlignment="center"
            app:layout_constraintTop_toTopOf="@+id/seekBar"/>
    <Button
            android:text="Gioca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/seekBar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="251dp"
            android:layout_height="36dp"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBar"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:text="0"
            android:layout_width="22dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="25sp"
            android:textStyle="bold" android:textColor="@color/colorPrimary"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.445" android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Vittorie"
            android:layout_width="94dp"
            android:layout_height="24dp"
            android:id="@+id/textView4" android:textSize="20sp" app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3" app:layout_constraintHorizontal_bias="0.486"
            android:textAlignment="center" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline" app:layout_constraintGuide_begin="216dp"
                                          android:orientation="vertical"/>
    <TextView
            android:text="0"
            android:layout_width="31dp"
            android:layout_height="32dp"
            android:id="@+id/textView6" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="25sp" android:textColor="@color/colorPrimary"
            android:textAlignment="center" android:layout_marginTop="84dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.491"/>
    <view android:layout_width="390dp" android:layout_height="359dp"
          class="com.example.giocotabella.ScacchieraView"
          id="@+id/view3"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button2"
          app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.567"
          android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>